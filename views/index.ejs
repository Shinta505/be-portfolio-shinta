    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

        :root {
            --bg-color: #f8f9fa;
            --text-color: #343a40;
            --primary-color: #007bff;
            --card-bg: #ffffff;
            --border-color: #dee2e6;
            --shadow-color: rgba(0, 0, 0, 0.05);
            --code-bg: #e9ecef;
            --code-text: #212529;
            --tag-get: #007bff;
            --tag-post: #28a745;
            --tag-put: #fd7e14;
            --tag-delete: #dc3545;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            margin: 0;
            padding: 2rem;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        header {
            text-align: center;
            margin-bottom: 3rem;
        }

        header h1 {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        header p {
            font-size: 1.1rem;
            color: #6c757d;
        }

        .base-url {
            background-color: var(--code-bg);
            padding: 1rem;
            border-radius: 8px;
            margin: 2rem 0;
            text-align: center;
            font-size: 1rem;
            border: 1px solid var(--border-color);
        }

        .base-url code {
            font-weight: 600;
            color: var(--primary-color);
        }

        .api-section {
            background: var(--card-bg);
            margin-bottom: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 12px var(--shadow-color);
            border: 1px solid var(--border-color);
            overflow: hidden;
        }

        .api-header {
            padding: 1rem 1.5rem;
            background-color: var(--bg-color);
            border-bottom: 1px solid var(--border-color);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .api-header:hover {
            background-color: #e9ecef;
        }

        .api-header h2 {
            margin: 0;
            font-size: 1.5rem;
            color: var(--text-color);
        }

        .api-header .toggle-icon {
            font-size: 1.5rem;
            transition: transform 0.3s ease;
        }

        .api-section.collapsed .toggle-icon {
            transform: rotate(-90deg);
        }

        .api-content {
            padding: 1.5rem;
            display: grid;
            gap: 1.5rem;
            transition: all 0.3s ease-in-out;
            max-height: 10000px;
            /* Adjusted for more content */
        }

        .api-section.collapsed .api-content {
            padding-top: 0;
            padding-bottom: 0;
            max-height: 0;
            overflow: hidden;
        }

        .api-endpoint {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            box-shadow: 0 2px 6px var(--shadow-color);
        }

        .endpoint-summary {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            background-color: #f8f9fa;
            border-bottom: 1px solid var(--border-color);
            cursor: pointer;
        }

        .endpoint-method {
            font-weight: 700;
            padding: 0.25rem 0.6rem;
            border-radius: 5px;
            color: #fff;
            margin-right: 1rem;
            font-size: 0.9rem;
            text-align: center;
            min-width: 70px;
        }

        .endpoint-method.GET {
            background-color: var(--tag-get);
        }

        .endpoint-method.POST {
            background-color: var(--tag-post);
        }

        .endpoint-method.PUT {
            background-color: var(--tag-put);
        }

        .endpoint-method.DELETE {
            background-color: var(--tag-delete);
        }

        .endpoint-path {
            font-family: 'Courier New', Courier, monospace;
            font-size: 1rem;
            font-weight: 600;
            color: var(--text-color);
        }

        .endpoint-description {
            flex-grow: 1;
            text-align: right;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .endpoint-details {
            display: none;
            padding: 1rem;
            background-color: #fff;
        }

        .endpoint-details h4 {
            margin-top: 0;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
            color: var(--primary-color);
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 0.25rem;
        }

        pre {
            background-color: var(--code-bg);
            color: var(--code-text);
            padding: 1rem;
            border-radius: 6px;
            white-space: pre-wrap;
            word-wrap: break-word;
            font-size: 0.85rem;
        }

        code {
            font-family: 'Courier New', Courier, monospace;
        }

        @media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            header h1 {
                font-size: 2rem;
            }

            .endpoint-summary {
                flex-direction: column;
                align-items: flex-start;
            }

            .endpoint-method {
                margin-bottom: 0.5rem;
            }

            .endpoint-description {
                text-align: left;
                margin-top: 0.5rem;
            }
        }
    </style>
</head>

